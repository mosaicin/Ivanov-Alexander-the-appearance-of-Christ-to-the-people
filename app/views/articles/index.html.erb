<!-- app/views/articles/index.html.erb -->

<div class="container">

  <div class="page-header">
    <h1>Articles <small>Checkout our blog</small></h1>
  </div>

  <div class="row">

    <div class="col-md-8">

      <ul class="list-group">
        <% @articles.each do |article| %>
          <li class="list-group-item">
            <%= link_to article.title, article %>
          </li>
        <% end %>
      <div class="pagination">
  <%= will_paginate @articles %>
      </div>
    <div class="col-md-4">

      <%= image_tag "blog.jpg", class: "img-responsive" %>

      <p>Subscribe to get updates!</p>

      <%= form_tag '#' do %>

        <div class="input-group">
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
          <span class="input-group-btn">
            <%= button_tag "Subscribe", class: "btn btn-primary" %>
          </span>
        </div>

      <% end %>

      <br>

      <p>Accept payments with Stripe:</p>

      <%= form_tag charges_path do %>
        <article>
          <%= render partial: "charge_form" %>
        </article>
      <% end %>

    </div>

  </div>

</div>
